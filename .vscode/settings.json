{
    "C_Cpp.formatting": "disabled",
    "C_Cpp.intelliSenseEngine": "disabled",
    
    "clangd.checkUpdates": true,
    "clangd.onConfigChanged": "restart",
    "clangd.arguments": [
      "-pretty",
    //   "-log=verbose",
      "-background-index",
      "-header-insertion=never",
      "--function-arg-placeholders",
    ],
    "clangd.fallbackFlags": [
        "-DBUILD_MAIN=1",
        "-Wno-writable-strings",
        "-I${workspaceFolder}\\src\\core",
        "-I${workspaceFolder}\\src\\sys",
        "-I${workspaceFolder}\\src\\hash",
        "-I${workspaceFolder}\\src\\render",
        "-I${workspaceFolder}\\src\\font",
        "-I${workspaceFolder}\\src\\draw",
        "-I${workspaceFolder}\\src\\ui",
        "-I${workspaceFolder}\\src\\external",
        "-include${workspaceFolder}\\src\\core\\core.h",
        "-include${workspaceFolder}\\src\\sys\\sys.h",
        "-include${workspaceFolder}\\src\\hash\\hash.h",
        "-include${workspaceFolder}\\src\\render\\render.h",
        "-include${workspaceFolder}\\src\\font\\font.h",
        "-include${workspaceFolder}\\src\\font\\font.h",
        "-include${workspaceFolder}\\src\\font\\font_cache.h",
        "-include${workspaceFolder}\\src\\draw\\draw.h",
        "-include${workspaceFolder}\\src\\ui\\ui.h",
        "-include${workspaceFolder}\\src\\core\\core.cpp",
        "-include${workspaceFolder}\\src\\sys\\sys.cpp",
        "-include${workspaceFolder}\\src\\hash\\hash.cpp",
        "-include${workspaceFolder}\\src\\render\\render.cpp",
        "-include${workspaceFolder}\\src\\font\\font.cpp",
        "-include${workspaceFolder}\\src\\font\\font_cache.cpp",
        "-include${workspaceFolder}\\src\\draw\\draw.cpp",
        "-include${workspaceFolder}\\src\\ui\\ui.cpp",
    ],
    "cmake.generator": "Ninja",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.configureSettings": {
      "CMAKE_EXPORT_COMPILE_COMMANDS": 0,
    },
    "cmake.configureOnOpen": true
  }